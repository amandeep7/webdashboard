<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <Button android:id="@+id/sendSmsBtn" android:layout_width="fill_parent" 
        android:layout_height="wrap_content" android:text="Send balance request" /> 
    <Button android:id="@+id/delSmsBtn" android:layout_width="fill_parent" 
        android:layout_height="wrap_content" android:text="Delete last message" />  
    <Button android:id="@+id/sendUSSDBtn" android:layout_width="fill_parent" 
        android:layout_height="wrap_content" android:text="Send USSD request" />  
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/hello"
    />
</LinearLayout>
