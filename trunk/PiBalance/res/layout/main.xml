<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id = "@+id/main"
    android:scrollbars = "vertical"
    >
    <TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text="@string/version"    />
    
    <TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/note"    />
    
    <Button android:id="@+id/sendSmsBtn" android:layout_width="fill_parent" 
        android:layout_height="wrap_content" android:text="Send balance request" /> 
    <Button android:id="@+id/dbgBtn" android:layout_width="fill_parent" 
        android:layout_height="wrap_content" android:text="Some debug" />  
    <Button android:id="@+id/sendUSSDBtn" android:layout_width="fill_parent" 
        android:layout_height="wrap_content" android:text="Send USSD request" />  

	<TextView  
    android:id="@+id/dbgTxt"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text=""
    />
    
    <TextView  
    android:id = "@+id/netwOperatorId"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    />
    
    <TextView  
    android:id = "@+id/netwOperatorName"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    />
    
    <TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/about"    />

</LinearLayout>
